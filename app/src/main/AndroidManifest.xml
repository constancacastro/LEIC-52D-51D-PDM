<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".CheRApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChelasReversi"
        tools:targetApi="31">
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ChelasReversi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".preferences.ui.PreferencesActivity"
            android:exported="true"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".game.lobby.ui.LobbyActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".game.play.ui.GameActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".authors.AuthorsScreenActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".game.favoriteGames.FavoriteGamesActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".game.lobby.ui.PlayerListActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".game.favoriteGames.replayGames.ReplayGameActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>